.header
  cf()

  max-width 1200px
  margin 0 auto

.nav-button
  -webkit-appearance none
  border 0
  background none
  float left
  padding 1em
  margin-right 1em
  transition all 400ms

  &.expanded
    background-color $off-white

    .nav-button-row
      background-color $menu-color

      &:first-child
        transform rotate3d(0,0,1,45deg) translate3d(5px,6px,0)

      &:nth-child(2)
        opacity 0

      &:last-child
        transform rotate3d(0,0,1,-45deg) translate3d(5px,-6px,0)

.nav-button-row
  width 30px
  height 2px
  background-color $white
  margin 6px 0
  display block
  transition all 400ms

.header-logo
  font-family $script
  font-size 2em
  margin 0.4em auto 0
  line-height 1
  float left
  font-weight 100

  .header-logo-link
    color $white
    text-decoration none
    position relative
    .d
      position absolute
      top -0.17em
    .a
      position absolute
      top 0.17em
      left 0.34em

.main-nav
  position absolute
  top 50px
  max-height 0
  background-color $off-white
  width 100%
  transition max-height 400ms
  padding 0 1em
  overflow hidden
  z-index: 10
  box-shadow 1px 1px 1px rgba(0,0,0,.5)
  listReset()

  &.expanded
    max-height 2000px

  li
    border-top 1px solid lighten($menu-color, 75%)


    &:first-child
      border-top none

    &:last-child
      padding 10px 0 20px


  a
    text-decoration none
    color $menu-color
    display block
    padding 1em 0

    &.selected, &:hover
      color $dark-text

    &.rsvp-link
      color $white

.main-nav .rsvp-link
  display inlin-block
  padding .5em
  border-radius 2px
  color $white
  background $turquoise
  text-decoration none
  text-align center
  font-weight 700
  box-shadow 2px 2px 2px rgba(0,0,0,.5)
  position relative

  &:hover
    box-shadow 1px 1px 1px rgba(0,0,0,.5)
    background darken($turquoise, 10%)

+above(48em)
  .logo-wrap
    float left

  .nav-button
    display none

  .main-nav
    max-height 2000px
    background none
    position relative
    top 10px
    float right
    width auto
    box-shadow none

    li
      border-top none
      display inline-block
      margin 0 10px

      &:last-child
        padding 0

    a
      color $off-white

      &.selected
        text-decoration underline
        color $white
        font-weight 700

      &:hover
        color $white
        text-decoration underline

      &.rsvp-link:hover
        text-decoration none

    &.expanded
      background-color none
